<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

	<context-param>
		<!-- Default locale - overrides HTTP "Accept-Language". -->
		<!-- Should be in sync with the faces-config / default-locale. -->
		<param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
		<param-value>en</param-value>
	</context-param>

	<context-param>
		<!-- Fallback locale - when a supported locale has not been found. -->
		<param-name>javax.servlet.jsp.jstl.fmt.fallbackLocale</param-name>
		<param-value>en</param-value>
	</context-param>

	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>

	<servlet>
		<servlet-name>DocumentServlet</servlet-name>
		<servlet-class>test.view.office.DocumentServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>DocumentServlet</servlet-name>
		<url-pattern>/document/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>FacesServlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>FacesServlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>WebContextFilter</filter-name>
		<filter-class>test.view.core.WebContextFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>WebContextFilter</filter-name>
		<url-pattern>*.xhtml</url-pattern>
	</filter-mapping>

	<!-- AUTHENTICATION WITH CUSTOM FILTER -->

	<filter>
		<filter-name>RequireLoginFilter</filter-name>
		<filter-class>test.view.auth.custom.RequireLoginFilter</filter-class>
		<init-param>
			<param-name>loginForm</param-name>
			<param-value>/login-custom.xhtml</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>RequireLoginFilter</filter-name>
		<url-pattern>/auth-custom/*</url-pattern>
	</filter-mapping>

	<!-- AUTHENTICATION WITH STANDARD JEE -->

	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/login-jee.xhtml</form-login-page>
			<form-error-page>/login-jee.xhtml?auth-error=1</form-error-page>
		</form-login-config>
	</login-config>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Protected Resources</web-resource-name>
			<url-pattern>/auth-jee/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>USER</role-name>
		</auth-constraint>
	</security-constraint>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Forbidden Resources</web-resource-name>
			<url-pattern>/*</url-pattern>
			<http-method>DELETE</http-method>
			<http-method>TRACE</http-method>
		</web-resource-collection>
		<auth-constraint />
	</security-constraint>

	<security-role>
		<role-name>USER</role-name>
	</security-role>

